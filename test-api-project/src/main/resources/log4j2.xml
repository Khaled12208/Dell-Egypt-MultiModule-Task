<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout  pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %t.%c.%M.Line %L - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.herokuapp" level="debug" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
    <Root level="DEBUG">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
